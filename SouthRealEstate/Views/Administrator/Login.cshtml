@{
    Layout = "~/Views/Shared/_LayoutAdministratorLogin.cshtml";
    ViewBag.Title = "Admin Login";
}
<link rel="stylesheet" href="~/css/pages/login.css">

<div class="mdl-layout mdl-js-layout">

    <section class="container">
        <div id="cube" class="show-front">
            <figure class="front">
                <div class="mdl-card mdl-shadow--6dp">
                    <div class="mdl-card__title mdl-color--primary mdl-color-text--white relative">
                        <h2 class="mdl-card__title-text">Login</h2>
                    </div>

                    <div class="mdl-card__supporting-text">
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input class="mdl-textfield__input" id="login_user" />
                            <label class="mdl-textfield__label" for="login_user">Login</label>
                        </div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                            <input class="mdl-textfield__input" type="password" id="login_password" />
                            <label class="mdl-textfield__label" for="login_password">Password</label>
                        </div>
                    </div>

                    <div class="mdl-card__actions mdl-card--border">
                        <div class="mdl-grid">
                            <button id="btn__login" class="mdl-cell mdl-cell--12-col mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect mdl-color-text--white">
                                Login
                            </button>
                        </div>
                    </div>
                </div>
            </figure>
        </div>
    </section>
</div>

@section Scripts
{
    <script src="@Url.Content("~/js/pages/login.js")"></script>
}